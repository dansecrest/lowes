extends ../_layouts/patio-doors.pug

include ../_components/checklist.pug
include ../_components/instruction.pug

append variables
    - bodyClass = "checklist"

block head
    +head(headData.patioDoors.checklist)
        script.
            window.addEventListener('load', function() {
                checklist.init();
            });

prepend container
    +hero(patioDoorsChecklist.hero)

block content
    .options
        +checklist(patioDoorsSections)
        +instruction(patioDoorsChecklist.instruction)

prepend footer
    +next(patioDoorsChecklist.next)
