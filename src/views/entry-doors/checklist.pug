extends ../_layouts/entry-doors.pug

include ../_components/checklist.pug
include ../_components/instruction.pug

append variables
    - bodyClass = "checklist"

block head
    +head(headData.entryDoors.checklist)
        script.
            window.addEventListener('load', function() {
                checklist.init();
            });

prepend container
    +hero(entryDoorsChecklist.hero)

block content
    .options
        +checklist(entryDoorsSections)
        +instruction(entryDoorsChecklist.instruction)

prepend footer
    +next(entryDoorsChecklist.next)
