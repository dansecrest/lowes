//- +head
    Creates a page head

mixin head(data)
    if !data
        - var data = {title: "null", description: "null"}

    head
        if bodyClass === "home"
            title= data.title
        else
            title= data.title + " | Lowe's Windows & Doors"

        meta(name="description", content= data.description)
        meta(name="viewport", content="width=device-width, initial-scale=1.0, maximum-scale=1.0")
        meta(name="format-detection", content="telephone=no")
        meta(charset="UTF-8")

        meta(property="og:title", id="ogTitle", content= data.title)
        meta(property="og:type", id="ogType", content="")
        meta(property="og:description", id="ogDescription", content= data.description)
        meta(property="og:url", id="ogUrl", content= data.url)
        meta(property="og:image", id="ogImage", content="/assets/images/lowes-windows-and-doors.jpg")

        meta(name="twitter:card", content="Summary")
        meta(name="twitter:site", content="@Lowes")
        meta(name="twitter:title", content= data.title)
        meta(name="twitter:description", content= data.description)
        meta(name="twitter:image" content="/assets/images/lowes-windows-and-doors.jpg")

        link(href="/assets/images/favicon.png", rel="shortcut icon", type="image/x-icon")
        link(href="/assets/styles/main.css", rel="stylesheet")

